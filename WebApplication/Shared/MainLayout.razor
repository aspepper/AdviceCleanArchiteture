@inherits LayoutComponentBase
@inject IStringLocalizer<Resource> localizer

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Dark" Fixed="false" Elevation="1">
        <MudLink Underline="Underline.None" Color="Color.Inherit" Href="/"><MudImage Src="images/logo-advice.png" Height="35"></MudImage></MudLink>
        <MudSpacer />
        <CultureSelector></CultureSelector>
        <MudLink Underline="Underline.None" Color="Color.Inherit" Href="/registration">@localizer["Registration"]</MudLink>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudAppBar Bottom="true" Fixed="true" Color="Color.Dark" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.FavoriteBorder" Color="Color.Inherit" Edge="Edge.End" />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
</MudLayout>